@model IEnumerable<Capitol_Theatre.Data.Notice>
@{
    ViewData["Title"] = "Manage Notices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-4">📢 Manage Notices</h2>

<div class="card bg-light p-4">
    <a href="/Admin/CreateNotice" class="btn btn-success mb-3">➕ Add New Notice</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Message</th>
                <th>Posted At</th>
                <th>Expires</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notice in Model)
            {
                <tr>
                    <td>@notice.Message</td>
                    <td>@notice.PostedAt.ToShortDateString()</td>
                    <td>@notice.Expires.ToShortDateString()</td>
                    <td><span class="badge bg-@notice.Color">@notice.Color</span></td>
                    <td>
                        <a href="/Admin/EditNotice/@notice.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/Admin/DeleteNotice/@notice.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
