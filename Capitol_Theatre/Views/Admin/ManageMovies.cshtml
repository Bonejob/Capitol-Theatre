@model IEnumerable<Capitol_Theatre.Data.Movie>

@{
    ViewData["Title"] = "Manage Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-4">🎬 Manage Movies</h2>

<a asp-action="CreateMovie" class="btn btn-primary mb-3">➕ Add New Movie</a>

<div class="card bg-light p-4">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Rating</th>
                <th>Runtime</th>
                <th>Start - End Dates</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Rating?.Code</td>
                    <td>@(movie.runtime ?? 0) mins</td>
                    <td>
                        @movie.StartShowingDate?.ToShortDateString()
                        -
                        @movie.EndShowingDate?.ToShortDateString()
                    </td>
                    <td>
                        <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteMovie"
                           asp-route-id="@movie.Id"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this movie?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
